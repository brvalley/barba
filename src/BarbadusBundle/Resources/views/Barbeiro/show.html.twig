{% block body %}
    <h1>Barbeiro</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ barbeiro.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ barbeiro.nome }}</td>
            </tr>
            <tr>
                <th>Servi√ßo</th>
